<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.forgotpassword.ForgotPasswordActivity">

  <!-- Back Button (Reused from Signup) -->
  <ImageButton
      android:id="@+id/forgot_password_back"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:background="@null"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/back_button" />

  <!-- Logo (Reused from Signup) -->
  <ImageView
      android:id="@+id/logo"
      android:layout_width="112dp"
      android:layout_height="106dp"
      android:layout_marginTop="32dp"
      android:contentDescription="@string/logo_description"
      android:src="@drawable/hardhat_logo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <!-- Title -->
  <TextView
      android:id="@+id/forgot_password_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="@string/forgot_password_title"
      android:textColor="@color/navy_blue"
      android:textSize="28sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/logo" />

  <!-- Subtitle -->
  <TextView
      android:id="@+id/forgot_password_subtitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="24dp"
      android:text="@string/forgot_password_subtitle"
      android:textAlignment="center"
      android:textColor="@color/gray"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/forgot_password_title" />

  <!-- Email Input (Reused from Signup) -->
  <EditText
      android:id="@+id/email_input"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:hint="@string/email_label"
      android:inputType="textEmailAddress"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/forgot_password_subtitle" />

  <!-- Send OTP Button (Styled like Signup's Register Button) -->
  <Button
      android:id="@+id/send_otp_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:background="@drawable/button_background"
      android:text="@string/send_otp_button"
      android:textAllCaps="false"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/email_input" />

</androidx.constraintlayout.widget.ConstraintLayout>