<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Forgotpassword.ForgotPasswordActivity">

  <!-- Back Button -->
  <ImageButton
      android:id="@+id/backButton"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:background="@null"
      android:contentDescription="@string/back_button_desc"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/back" />

  <!-- Logo -->
  <ImageView
      android:id="@+id/logo"
      android:layout_width="112dp"
      android:layout_height="106dp"
      android:layout_marginTop="32dp"
      android:contentDescription="@string/logo_desc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/hardhat_logo" />

  <!-- Title -->
  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="@string/forgot_password_title"
      android:textColor="@color/navy_blue"
      android:textSize="28sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/logo" />

  <!-- Subtitle -->
  <TextView
      android:id="@+id/subtitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="24dp"
      android:text="@string/forgot_password_subtitle"
      android:textAlignment="center"
      android:textColor="@color/grey"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title" />

  <!-- Email Input -->
  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/emailInputLayout"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:hint="@string/email_label"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/subtitle">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />
  </com.google.android.material.textfield.TextInputLayout>

  <!-- Send OTP Button -->
  <Button
      android:id="@+id/sendOtpButton"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="16dp"
      android:background="@drawable/buttons_rounded"
      android:backgroundTint="@color/baby_blue"
      android:textColor="@color/navy_blue"
      android:text="@string/send_otp_button"
      android:textAllCaps="false"

      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/emailInputLayout" />

  <!-- Progress Bar -->
  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@id/sendOtpButton"
      app:layout_constraintEnd_toEndOf="@id/sendOtpButton"
      app:layout_constraintStart_toStartOf="@id/sendOtpButton"
      app:layout_constraintTop_toTopOf="@id/sendOtpButton" />

</androidx.constraintlayout.widget.ConstraintLayout>