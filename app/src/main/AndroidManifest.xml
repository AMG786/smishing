<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmishingDetectionApp"
        tools:targetApi="31">
        <activity
            android:name=".SmishingRulesActivity"
            android:exported="false" />
        <activity
            android:name=".DetectionsActivity"
            android:exported="false" />
        <activity
            android:name=".NewsActivity"
            android:exported="false" />
        <activity
            android:name=".ReportingActivity"
            android:exported="false" />
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.SmishingDetectionApp" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false" /> <!-- Making the LoginActivity the launcher and exported -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">

        </activity> <!-- This is the Main/Dashboard -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SmishingDetectionApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Removed MAIN and LAUNCHER intent-filter -->
        </activity>
    </application>

</manifest>